{
	"multipart": [
		{   "when": {"facing":"north","lit":"false"},
			"apply": [{ "model": "professionsmod:block/crucible_block" }]
        },
		{   "when": {"facing":"east","lit":"false"},
			"apply": [{ "model": "professionsmod:block/crucible_block", "y": 90 }]
        },
        		{   "when": {"facing":"south","lit":"false"},
			"apply": [{ "model": "professionsmod:block/crucible_block",  "y": 180 }]
        },
		{   "when": {"facing":"west","lit":"false"},
			"apply": [{ "model": "professionsmod:block/crucible_block", "y": 270 }]
        },
		{   "when": {"facing":"north","lit":"true"},
			"apply": [{ "model": "professionsmod:block/crucible_block_lit" }]
        },
		{   "when": {"facing":"east","lit":"true"},
			"apply": [{ "model": "professionsmod:block/crucible_block_lit", "y": 90 }]
        },
        		{   "when": {"facing":"south","lit":"true"},
			"apply": [{ "model": "professionsmod:block/crucible_block_lit",  "y": 180 }]
        },
		{   "when": {"facing":"west","lit":"true"},
			"apply": [{ "model": "professionsmod:block/crucible_block_lit", "y": 270 }]
        },
        {   "when": {"drain_facing":"east"},
			"apply": [
                { "model": "professionsmod:block/crucible_drain"}
            ]
        },
		{   "when": {"drain_facing":"south"},
			"apply": [
                { "model": "professionsmod:block/crucible_drain", "y": 90 }
            ]
        },
		{   "when": {"drain_facing":"west"},
			"apply": [
                { "model": "professionsmod:block/crucible_drain", "y": 180 }
            ]
        },
		{   "when": {"drain_facing":"north"},
			"apply": [
                { "model": "professionsmod:block/crucible_drain", "y": 270 }
            ]
        }
	]
}